<% provide(:title, "All Windows") %>

<div class="container">
	<div class="row">
		<% @windows.each do |window| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-body">
				<%= image_tag window.image.url(:medium)%>
				</div>
				<div class="panel-footer">
					<h3><%= window.get_likes.size %> <%= (link_to window.store_name + " | #{window.location}", window)%></h3>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>